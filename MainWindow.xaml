<Window x:Class="LugatimApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Lugatim SÃ¶zlÃ¼k" Height="600" Width="1000"
        Loaded="Window_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" MinWidth="250" MaxWidth="250"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Sol Panel: Kontroller ve GeÃ§miÅŸ -->
		<Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                Background="#F5F5F5"
                BorderBrush="#CCCCCC"
                BorderThickness="0,0,1,0"
                Padding="10">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="120"/>
				</Grid.RowDefinitions>

				<!-- Rastgele Butonu -->
				<Button x:Name="btnRandom"
                        Grid.Row="0"
                        Content="ðŸŽ² Rastgele Kelime"
                        Height="40"
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnRandom_Click">
					<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="#4CAF50"/>
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#45a049"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>
				</Button>

				<!-- Arama Kutusu -->
				<TextBox x:Name="txtSearch"
                         Grid.Row="1"
                         Height="35"
                         Margin="0,0,0,5"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         KeyDown="TxtSearch_KeyDown">
					<TextBox.Style>
						<Style TargetType="TextBox">
							<Style.Triggers>
								<Trigger Property="Text" Value="">
									<Setter Property="Background" Value="White"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</TextBox.Style>
				</TextBox>
				<TextBlock Grid.Row="1"
                           Text="Kelime ara..."
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="8,0,0,5"
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           FontSize="14">
					<TextBlock.Style>
						<Style TargetType="TextBlock">
							<Setter Property="Visibility" Value="Collapsed"/>
							<Style.Triggers>
								<DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
									<Setter Property="Visibility" Value="Visible"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</TextBlock.Style>
				</TextBlock>

				<!-- Arama Butonu -->
				<Button x:Name="btnSearch"
                        Grid.Row="2"
                        Content="ðŸ” Ara"
                        Height="35"
                        Margin="0,0,0,15"
                        FontSize="14"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnSearch_Click">
					<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="#2196F3"/>
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#0b7dda"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>
				</Button>

				<!-- Sekmeler: GeÃ§miÅŸ ve Favoriler -->
				<TabControl Grid.Row="4" BorderThickness="0">
					<TabItem Header="ðŸ“œ GeÃ§miÅŸ" FontSize="12">
						<ListBox x:Name="lstHistory"
                                 Background="White"
                                 BorderThickness="1"
                                 BorderBrush="#CCCCCC"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 SelectionChanged="LstHistory_SelectionChanged">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<Grid Margin="0,5,0,5" MaxWidth="210">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*"/>
											<ColumnDefinition Width="35"/>
											<ColumnDefinition Width="35"/>
											<ColumnDefinition Width="35"/>
										</Grid.ColumnDefinitions>

										<StackPanel Grid.Column="0"
                                                    Orientation="Vertical"
                                                    Margin="0,0,5,0">
											<TextBlock Text="{Binding Word}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis"/>
											<TextBlock Text="{Binding Notes}"
                                                       FontSize="11"
                                                       Foreground="#666666"
                                                       FontStyle="Italic"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,2,0,0"
                                                       Visibility="{Binding NotesVisibility}"/>
										</StackPanel>

										<Button Grid.Column="1"
                                                Content="{Binding FavoriteIcon}"
                                                FontSize="20"
                                                FontFamily="Segoe UI Symbol"
                                                Width="35"
                                                Height="35"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="BtnToggleFavorite_Click"
                                                Tag="{Binding}"
                                                ToolTip="Favorilere ekle/Ã§Ä±kar">
											<Button.Style>
												<Style TargetType="Button">
													<Setter Property="Foreground" Value="#FFD700"/>
												</Style>
											</Button.Style>
										</Button>

										<Button Grid.Column="2"
                                                Content="ðŸ“"
                                                FontSize="16"
                                                Width="35"
                                                Height="35"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="BtnAddNote_Click"
                                                Tag="{Binding}"
                                                ToolTip="Not ekle/dÃ¼zenle">
											<Button.Style>
												<Style TargetType="Button">
													<Setter Property="Foreground" Value="#4CAF50"/>
													<Style.Triggers>
														<Trigger Property="IsMouseOver" Value="True">
															<Setter Property="Foreground" Value="#45a049"/>
														</Trigger>
													</Style.Triggers>
												</Style>
											</Button.Style>
										</Button>

										<Button Grid.Column="3"
                                                Content="Ã—"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Width="35"
                                                Height="35"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="BtnDelete_Click"
                                                Tag="{Binding}"
                                                ToolTip="Sil">
											<Button.Style>
												<Style TargetType="Button">
													<Setter Property="Foreground" Value="#CCCCCC"/>
													<Style.Triggers>
														<Trigger Property="IsMouseOver" Value="True">
															<Setter Property="Foreground" Value="#FF0000"/>
														</Trigger>
													</Style.Triggers>
												</Style>
											</Button.Style>
										</Button>
									</Grid>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</TabItem>

					<TabItem Header="â­ Favoriler" FontSize="12">
						<ListBox x:Name="lstFavorites"
                                 Background="White"
                                 BorderThickness="1"
                                 BorderBrush="#CCCCCC"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 SelectionChanged="LstFavorites_SelectionChanged">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<Grid Margin="0,5,0,5" MaxWidth="210">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*"/>
											<ColumnDefinition Width="35"/>
											<ColumnDefinition Width="35"/>
											<ColumnDefinition Width="35"/>
										</Grid.ColumnDefinitions>

										<StackPanel Grid.Column="0"
                                                    Orientation="Vertical"
                                                    Margin="0,0,5,0">
											<TextBlock Text="{Binding Word}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis"/>
											<TextBlock Text="{Binding Notes}"
                                                       FontSize="11"
                                                       Foreground="#666666"
                                                       FontStyle="Italic"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,2,0,0"
                                                       Visibility="{Binding NotesVisibility}"/>
										</StackPanel>

										<Button Grid.Column="1"
                                                Content="â˜…"
                                                FontSize="20"
                                                FontFamily="Segoe UI Symbol"
                                                Width="35"
                                                Height="35"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Foreground="#FFD700"
                                                Click="BtnToggleFavorite_Click"
                                                Tag="{Binding}"
                                                ToolTip="Favorilerden Ã§Ä±kar"/>

										<Button Grid.Column="2"
                                                Content="ðŸ“"
                                                FontSize="16"
                                                Width="35"
                                                Height="35"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="BtnAddNote_Click"
                                                Tag="{Binding}"
                                                ToolTip="Not ekle/dÃ¼zenle">
											<Button.Style>
												<Style TargetType="Button">
													<Setter Property="Foreground" Value="#4CAF50"/>
													<Style.Triggers>
														<Trigger Property="IsMouseOver" Value="True">
															<Setter Property="Foreground" Value="#45a049"/>
														</Trigger>
													</Style.Triggers>
												</Style>
											</Button.Style>
										</Button>

										<Button Grid.Column="3"
                                                Content="Ã—"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Width="35"
                                                Height="35"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="BtnDelete_Click"
                                                Tag="{Binding}"
                                                ToolTip="Sil">
											<Button.Style>
												<Style TargetType="Button">
													<Setter Property="Foreground" Value="#CCCCCC"/>
													<Style.Triggers>
														<Trigger Property="IsMouseOver" Value="True">
															<Setter Property="Foreground" Value="#FF0000"/>
														</Trigger>
													</Style.Triggers>
												</Style>
											</Button.Style>
										</Button>
									</Grid>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</TabItem>
				</TabControl>

				<!-- Not GÃ¶rÃ¼ntÃ¼leme Paneli (Sol Alt) -->
				<Border x:Name="notePanel"
                        Grid.Row="5"
                        Background="White"
                        BorderBrush="#4CAF50"
                        BorderThickness="2"
                        Margin="0,5,0,0"
                        Padding="8"
                        Visibility="Collapsed">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<TextBlock x:Name="txtNotePanelTitle"
                                   Grid.Row="0"
                                   Text="ðŸ“ Not"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>

						<ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      MaxHeight="85">
							<TextBlock x:Name="txtNoteDisplay"
                                       FontSize="11"
                                       Foreground="#333333"
                                       TextWrapping="Wrap"/>
						</ScrollViewer>
					</Grid>
				</Border>
			</Grid>
		</Border>

		<!-- SaÄŸ Panel: WebView2 -->
		<wv2:WebView2 x:Name="webView"
                      Grid.Row="0"
                      Grid.RowSpan="2"
                      Grid.Column="1"/>
	</Grid>
</Window>
